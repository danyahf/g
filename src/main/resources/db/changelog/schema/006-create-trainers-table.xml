<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="create-trainers-table" author="danylo_demchenko@emap.com">
        <createTable tableName="trainers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="specialization_id" type="INT"/>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="trainers"
                baseColumnNames="specialization_id"
                constraintName="fk_trainers_specialization"
                referencedTableName="training_types"
                referencedColumnNames="id"/>

        <addForeignKeyConstraint
                baseTableName="trainers"
                baseColumnNames="user_id"
                constraintName="fk_trainers_user"
                referencedTableName="users"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>
