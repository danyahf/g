<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="create-trainings-table" author="danylo_demchenko@epam.com">
        <createTable tableName="trainings">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="trainee_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="trainer_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="training_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="training_type_id" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="duration" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="trainings"
                baseColumnNames="trainee_id"
                constraintName="fk_trainings_trainee"
                referencedTableName="trainees"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="trainings"
                baseColumnNames="trainer_id"
                constraintName="fk_trainings_trainer"
                referencedTableName="trainers"
                referencedColumnNames="id"
                onDelete="CASCADE"/>

        <addForeignKeyConstraint
                baseTableName="trainings"
                baseColumnNames="training_type_id"
                constraintName="fk_trainings_training_type"
                referencedTableName="training_types"
                referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>
