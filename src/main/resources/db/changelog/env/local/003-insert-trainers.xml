<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.23.xsd">

    <changeSet id="insert-trainers" author="danylo_demchenko@epam.com" context="local">
        <insert tableName="trainers">
            <column name="id" valueNumeric="1"/>
            <column name="specialization_id" valueNumeric="1"/>
            <column name="user_id" valueNumeric="7"/>
        </insert>

        <insert tableName="trainers">
            <column name="id" valueNumeric="2"/>
            <column name="specialization_id" valueNumeric="2"/>
            <column name="user_id" valueNumeric="8"/>
        </insert>

        <insert tableName="trainers">
            <column name="id" valueNumeric="3"/>
            <column name="specialization_id" valueNumeric="3"/>
            <column name="user_id" valueNumeric="9"/>
        </insert>

        <insert tableName="trainers">
            <column name="id" valueNumeric="4"/>
            <column name="specialization_id" valueNumeric="4"/>
            <column name="user_id" valueNumeric="10"/>
        </insert>

        <insert tableName="trainers">
            <column name="id" valueNumeric="5"/>
            <column name="specialization_id" valueNumeric="5"/>
            <column name="user_id" valueNumeric="11"/>
        </insert>

        <insert tableName="trainers">
            <column name="id" valueNumeric="6"/>
            <column name="specialization_id" valueNumeric="3"/>
            <column name="user_id" valueNumeric="12"/>
        </insert>
    </changeSet>
    <changeSet id="reset-trainers-sequence" author="danylo_demchenko@epam.com" context="local">
        <sql>
            SELECT setval('trainers_id_seq', (SELECT MAX(id) FROM trainers));
        </sql>
    </changeSet>
</databaseChangeLog>
